{
  "manifest_version": 3,
  "version": "1.0",
  "name": "Tracelet",
  "action": {
    "default_popup": "index.html",
    "default_icon": "assets/bookmark-icon.png",
    "default_title": "Open Tracelet"
  },
  "description": "Save tabs with style. Emoji-powered categories, cinematic feedback, and intentional UX for the modern web explorer.",
  "permissions": ["storage", "tabs"],
  "host_permissions": ["<all_urls>"],
  "content_security_policy": {
    "extension_pages": "script-src 'self'; object-src 'self'"
  },
  "web_accessible_resources": [
    {
      "resources": [
        "viewer/viewer.html",
        "viewer/viewer.js",
        "styles/viewer.css"
      ],
      "matches": ["<all_urls>"]
    }
  ],
  "background": {
    "service_worker": "scripts/background.js"
  },

  "icons": {
    "128": "assets/bookmark-icon.png"
  }
}
